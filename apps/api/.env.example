# Application
NODE_ENV=development
PORT=3400
FRONTEND_URL=http://localhost:3401
CORS_ORIGINS=http://localhost:3401,http://localhost:3400

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/rental_portal?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6382
REDIS_PASSWORD=
REDIS_TTL=3600

# JWT
# WARNING: This is a placeholder. In production, generate a secure random string of at least 64 characters.
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_THIS_IN_PRODUCTION_USE_CRYPT0_RANDOM_64_CHAR_STRING_MINIMUM
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PLATFORM_FEE_PERCENTAGE=10

# AWS / MinIO S3
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin123
AWS_S3_BUCKET=rental-portal-uploads
AWS_S3_ENDPOINT=http://localhost:9000
AWS_TEXTRACT_ENABLED=true

# Email Configuration
EMAIL_PROVIDER=resend
# Resend (recommended - free 3000 emails/month)
RESEND_API_KEY=re_your_resend_api_key_here
EMAIL_FROM=noreply@yourdomain.com
# SMTP (legacy - optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@yourdomain.com

# SMS (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Push Notifications (Firebase)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_CLIENT_EMAIL=your_firebase_client_email
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FCM_SERVER_KEY=your_fcm_server_key

# Content Moderation (OpenAI)
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4
MODERATION_CONFIDENCE_THRESHOLD=0.75

# AWS Services (for production)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_S3_BUCKET=rental-portal-uploads
# AWS_TEXTRACT_ENABLED=true
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# Security
BCRYPT_ROUNDS=10

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT=100
