# Database Configuration
DATABASE_URL="postgresql://rental_user:rental_pass@localhost:3432/rental_db?schema=public"

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=3479
REDIS_URL=redis://localhost:3479
REDIS_PASSWORD=

# API Configuration
NODE_ENV=development
PORT=3400
API_URL=http://localhost:3400

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=30d

# Email Service - Resend (Free: 3,000 emails/month)
RESEND_API_KEY=re_123456789_your_resend_api_key
EMAIL_FROM=noreply@yourdomain.com
# For testing, use: noreply@resend.dev

# Storage - Cloudflare R2 (Free: 10GB storage)
# Leave empty to use local storage in development
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=rental-portal-uploads
R2_PUBLIC_URL=
LOCAL_STORAGE_PATH=./uploads

# Stripe Payments
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# SMS/Notifications (Optional - can skip for MVP)
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# TWILIO_PHONE_NUMBER=

# Firebase Cloud Messaging (Optional)
# FIREBASE_PROJECT_ID=
# FIREBASE_PRIVATE_KEY=
# FIREBASE_CLIENT_EMAIL=

# Content Moderation (Using free alternatives)
# No API keys needed - using bad-words library

# Search
# For MVP: Using PostgreSQL full-text search (no additional config needed)
# For production: Elasticsearch/OpenSearch
# ELASTICSEARCH_NODE=http://localhost:3492
# ELASTICSEARCH_USERNAME=
# ELASTICSEARCH_PASSWORD=

# AWS Services (Optional - only if not using free alternatives)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=
# AWS_REKOGNITION_ENABLED=false
# AWS_TEXTRACT_ENABLED=false

# Monitoring & Error Tracking (Optional)
# SENTRY_DSN=
# SENTRY_ENVIRONMENT=development

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# CORS
CORS_ORIGINS=http://localhost:3401,http://localhost:3400

# Application Settings
APP_NAME="GharBatai Rentals"
APP_URL=http://localhost:3401
SUPPORT_EMAIL=support@yourdomain.com

# Security
BCRYPT_ROUNDS=10
SESSION_SECRET=your-session-secret-change-this

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp,image/gif
ALLOWED_DOCUMENT_TYPES=application/pdf,image/jpeg,image/png

# Booking Configuration
DEFAULT_SERVICE_FEE_PERCENTAGE=10
DEFAULT_SECURITY_DEPOSIT_PERCENTAGE=20
MIN_BOOKING_DURATION_HOURS=24
MAX_BOOKING_DURATION_DAYS=365
BOOKING_CANCELLATION_WINDOW_HOURS=24

# Insurance
INSURANCE_VERIFICATION_REQUIRED=true
DEFAULT_INSURANCE_PROVIDER=manual

# Notifications
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false
